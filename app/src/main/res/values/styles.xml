<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:background">@color/appbarColor</item>
        <item name="android:layout_height">@dimen/appbarHeight</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
          <item name="android:layout_marginLeft">5dp</item>
         <item name="android:layout_marginRight">5dp</item>
         <item name="android:layout_marginBottom">5dp</item>
         <item name="android:layout_marginTop">5dp</item>
         <item name="backgroundTint">@color/colorAccent</item>
         <item name="android:textColor">@color/textColorPrimary</item>
         <item name="android:paddingLeft">40dp</item>
         <item name="android:paddingRight">40dp</item>
         <item name="android:layout_height">60dp</item>
         <item name="android:layout_width">wrap_content</item>
     </style>

    <style name="AppTheme.Button.Colored" parent="AppTheme.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccentText</item>
    </style>

    <style name="AppTheme.Button.HomeButton" parent="AppTheme.Button">
        <item name="backgroundTint">#fff</item>
        <item name="android:layout_height">@dimen/largeButtonHeight</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="AppTheme.TextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextView.Title" parent="AppTheme.TextView"><item name="android:textSize">@dimen/titleText</item></style>

    <style name="AppTheme.TextView.Colored" parent="AppTheme.TextView"> <item name="android:textColor">@color/colorAccent</item> </style>

    <style name="AppTheme.HeaderView">
        <item name="android:textSize">@dimen/mMediumText</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/appbarViewsColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/appbarViewsColor</item>
   </style>

    <style name="AppTheme.HeaderView.Title" parent="AppTheme.HeaderView"> <item name="android:textSize">@dimen/titleText</item></style>

    <style name="AppTheme.BackgroundBlur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">.8</item>
        <item name="android:background">#1e1e1e</item>
    </style>

    <style name="AppTheme.CardView" parent="AppTheme">
        <item name="cardBackgroundColor">#fff</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="AppTheme.ScrollView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scrollview_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/custom_scrollview_track</item>
        <item name="android:scrollbarStyle">insideInset</item>
    </style>

    <style name="FullScreenDialog" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="GridItemStyle" parent="Theme.AppCompat">
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="gridThumbnail">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- blurs bg of view behind infor button and flashcard name -->
    <style name="Blur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">.3</item>
        <item name="android:background">#414141</item>
    </style>

    <!-- locked layout sytles -->

    <style name="AppTheme.UpgradeBtn" parent="AppTheme.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- component picture view -->
    <style name="PictureView"></style>
    <style name="PictureView.Background"><item name="android:background">#fff</item>  </style>
    <style name="PictureView.MainImage"></style>

    <!-- component info view -->
    <style name="InfoView"></style>
    <style name="InfoView.Background"><item name="android:background">#fff</item></style>
    <style name="InfoView.Image">
        <item name="android:alpha">.2</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--  cv_switcher   -->
    <style name="SwitcherLabel">
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/mMediumText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SwitcherRevealBtn" parent="AppTheme.Button.Colored">
        <item name="android:textSize">@dimen/mMediumText</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">Reveal</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="SwitcherHiddenText">
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/mMediumText</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- component labeledText -->
    <style name="ComponentLabeledText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ComponentLabeledText.Main" parent="AppTheme.TextView.Colored">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/mMediumText</item>
    </style>

    <style name="ComponentLabeledText.Label" parent="AppTheme.TextView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/labelTextColor</item>
        <item name="android:textSize">@dimen/mMediumText</item>
    </style>

    <style name="IconSwitch">
        <item name="isw_background_color">@color/switchBackground</item>
        <item name="isw_thumb_color_left">@color/colorAccent</item>
        <item name="isw_thumb_color_right">@color/colorAccent</item>
        <item name="isw_inactive_tint_icon_left">@color/colorAccentText</item>
        <item name="isw_inactive_tint_icon_right">@color/colorAccentText</item>
        <item name="isw_active_tint_icon_left">@color/colorAccentText</item>
        <item name="isw_active_tint_icon_right">@color/colorAccentText</item>
    </style>


</resources>
