<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:background">@color/appbarColor</item>
        <item name="android:layout_height">@dimen/appbarHeight</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
         <item name="elevation">10dp</item>
         <item name="android:layout_margin">10dp</item>
         <item name="backgroundTint">@color/colorAccent</item>
         <item name="android:textColor">@color/textColorPrimary</item>
         <item name="android:layout_height">60dp</item>
         <item name="android:layout_width">200dp</item>
     </style>

    <style name="AppTheme.Button.HomeButton">
        <item name="backgroundTint">#fff</item>
    </style>

    <style name="AppTheme.TextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextView.Title" parent="AppTheme.TextView"><item name="android:textSize">@dimen/titleText</item></style>

    <style name="AppTheme.TextView.Colored" parent="AppTheme.TextView"> <item name="android:textColor">@color/colorAccent</item> </style>

    <style name="AppTheme.HeaderView">
        <item name="android:textSize">@dimen/mMediumText</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
       <item name="android:textColor">@color/appbarViewsColor</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_gravity">center_vertical</item>
   </style>

    <style name="AppTheme.HeaderView.Title" parent="AppTheme.HeaderView"> <item name="android:textSize">@dimen/titleText</item></style>

    <style name="AppTheme.BackgroundBlur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">.8</item>
        <item name="android:background">#1e1e1e</item>
    </style>


    <style name="FullScreenDialog" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="GridItemStyle" parent="Theme.AppCompat">
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="gridThumbnail">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- blurs bg of view behind infor button and flashcard title -->
    <style name="Blur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">.3</item>
        <item name="android:background">#999EA0</item>
    </style>

</resources>
