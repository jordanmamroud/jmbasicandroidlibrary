<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

            <View
                style="@style/InfoView.Background"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.TextView.Title"
                android:id="@+id/infoTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
             />

             <ImageView
                 android:id="@+id/itemImgHolder"
                 style="@style/InfoView.Image"
            />

            <ScrollView
                style="@style/AppTheme.ScrollView"
                android:layout_below="@+id/infoTitle"
                android:fillViewport="true"
                android:gravity="center"
               >

                <LinearLayout
                    android:gravity="center"
                     android:id="@+id/infoContainerLo"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

            </ScrollView>


 </RelativeLayout>
